@model XDeco.Models.Usuario

<!-- Agrega estilos CSS en línea o en tu archivo CSS -->
<style>
    /* Cambiar el borde de las cajas de texto cuando se seleccionan */
    .form-control:focus {
        border-color: #8B4513; /* Marrón */
        box-shadow: 0 0 5px #8B4513;
    }

    /* Estilo para el botón de guardar cambios */
    .btn-custom-brown {
        background-color: #8B4513; /* Marrón */
        border-color: #8B4513;
        color: white;
    }
    .btn-custom-brown:hover {
        background-color: #A0522D; /* Marrón más claro */
        border-color: #A0522D;
    }
</style>

<div class="modal-header">
    <h5 class="modal-title">Editar Clientes</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <form asp-action="Edit" asp-controller="Admin" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nombres" class="form-label"></label>
            <input asp-for="Nombres" class="form-control" />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ApellidoPaterno" class="form-label"></label>
            <input asp-for="ApellidoPaterno" class="form-control" />
            <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ApellidoMaterno" class="form-label"></label>
            <input asp-for="ApellidoMaterno" class="form-control" />
            <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Número de Teléfono</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Botón de guardar cambios con estilo personalizado -->
        <button type="submit" class="btn btn-custom-brown">Guardar cambios</button>
    </form>
</div>
