@model XDeco.Models.Producto

<!-- Agrega estilos CSS en línea o en tu archivo CSS -->
<style>
    /* Cambiar el borde de las cajas de texto cuando se seleccionan */
    .form-control:focus {
        border-color: #8B4513; /* Marrón */
        box-shadow: 0 0 5px #8B4513;
    }

    /* Estilo para el botón de guardar cambios */
    .btn-custom-brown {
        background-color: #8B4513; /* Marrón */
        border-color: #8B4513;
        color: white;
    }
    .btn-custom-brown:hover {
        background-color: #A0522D; /* Marrón más claro */
        border-color: #A0522D;
    }
</style>

<div class="modal-header">
    <h5 class="modal-title">Editar Producto</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <form asp-action="EditarProducto" asp-controller="Admin" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descripcion" class="form-label"></label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Precio" class="form-label"></label>
            <input asp-for="Precio" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Material" class="form-label"></label>
            <input asp-for="Material" class="form-control" />
            <span asp-validation-for="Material" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Color" class="form-label"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EsAjustable" class="form-label">¿Es ajustable?</label>
            <input asp-for="EsAjustable" type="checkbox" class="form-check-input" />
            <span asp-validation-for="EsAjustable" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageURL" class="form-label">URL de Imagen</label>
            <input asp-for="ImageURL" class="form-control" />
            <span asp-validation-for="ImageURL" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UrlObj" class="form-label">URL del Objeto 3D (si aplica)</label>
            <input asp-for="UrlObj" class="form-control" />
            <span asp-validation-for="UrlObj" class="text-danger"></span>
        </div>

        <!-- Botón de guardar cambios con estilo personalizado -->
        <button type="submit" class="btn btn-custom-brown">Guardar cambios</button>
    </form>
</div>
