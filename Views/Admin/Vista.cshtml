@{
    ViewData["Title"] = "Vista Admin";
    Layout = "_LayoutAdmin";
}

<!-- Contenido de la Página -->
<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row">
        <!-- Tarjeta: Gestionar Clientes -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="https://i.pinimg.com/564x/56/f1/c3/56f1c30a58db3e490df3f84c80e8f9d9.jpg" class="card-img-top"
                    alt="Gestionar Clientes">
                <div class="card-body">
                    <h5 class="card-title">Gestionar Clientes</h5>
                    <p class="card-text">Aquí puedes gestionar los clientes.</p>
                    <a asp-action="ListaClientes" class="btn btn-primary">Gestionar Clientes</a>
                </div>
            </div>
        </div>
        <!-- Tarjeta: Gestionar Productos -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="https://img.freepik.com/vector-premium/icono-escritorio-montaje-vector-isometrico-fabricacion-muebles-producto-trabajador_96318-84277.jpg"
                    class="card-img-top" alt="Gestionar Productos">
                <div class="card-body">
                    <h5 class="card-title">Gestionar Productos</h5>
                    <p class="card-text">Aquí puedes gestionar los productos.</p>
                    <a asp-action="ManageProducts" class="btn btn-primary">Gestionar Productos</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Tarjeta: Gestionar Compras -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="https://cdn-icons-png.freepik.com/512/7626/7626835.png" class="card-img-top"
                    alt="Gestionar Compras">
                <div class="card-body">
                    <h5 class="card-title">Gestionar Compras</h5>
                    <p class="card-text">Aquí puedes gestionar las compras.</p>
                    <a asp-action="ManagePurchases" class="btn btn-primary">Gestionar Compras</a>
                </div>
            </div>
        </div>

        <!-- Tarjeta: Agregar Productos -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <img src="https://cdn-icons-png.flaticon.com/512/10608/10608872.png" class="card-img-top"
                    alt="Agregar Productos">
                <div class="card-body">
                    <h5 class="card-title">Agregar Productos</h5>
                    <p class="card-text">Aquí puedes agregar nuevos productos.</p>
                    <a asp-action="AddProducts" class="btn btn-primary">Agregar Productos</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}