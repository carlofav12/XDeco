@{
    ViewData["Title"] = "Acceso Denegado";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        .access-denied-main {
            background-color: #f8d7da; /* Fondo suave rosado */
            color: #721c24; /* Texto color rojo oscuro */
            text-align: center;
            padding: 50px 20px; /* Espaciado generoso */
            border-radius: 8px; /* Bordes redondeados */
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1); /* Sombra ligera */
            max-width: 600px;
            margin: 50px auto; /* Centrado en la página */
        }

        .access-denied-main h1 {
            font-size: 2.5em;
            margin-bottom: 20px;
            color: #c0392b; /* Color del título */
        }

        .access-denied-main p {
            font-size: 1.2em;
            color: #856404; /* Color del mensaje */
            margin-bottom: 30px;
        }

        .access-denied-main .icon {
            font-size: 3em;
            color: #c0392b; /* Icono rojo */
            margin-bottom: 20px;
        }

        .access-denied-main .btn {
            display: inline-block;
            background-color: #007bff; /* Color del botón */
            color: white;
            padding: 10px 25px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

        .access-denied-main .btn:hover {
            background-color: #0056b3; /* Color al pasar el ratón */
        }
    </style>
</head>
<body>
    <main class="access-denied-main">
        <div class="icon">
            <i class="fas fa-exclamation-triangle"></i> <!-- Icono de advertencia -->
        </div>
        <h1>Acceso Denegado</h1>
        <p>No tienes permisos para acceder a esta página.</p>
        <a href="/" class="btn">Volver a Inicio</a>
    </main>
</body>
</html>
