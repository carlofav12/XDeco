  /* Estilo del carrusel */
  .carousel-item img {
    border-radius: 15px;
    box-shadow: 0 8px 30px #cac3b0;
    max-height: 450px;
    object-fit: cover;
    width: 100%;
  }

  .carousel-control-prev-icon,
  .carousel-control-next-icon {
    background-color: #a59f8f;
    border-radius: 50%;
  }

  .carousel-control-prev-icon:hover,
  .carousel-control-next-icon:hover {
    background-color: #a7a192;
  }


/* Estilo de las tarjetas */
.card {
  margin: 25px auto;
  padding: 20px;
  border: 2px solid #8B4513;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border-radius: 15px;
  overflow: hidden;
  width: 100%;  /* Tarjetas más anchas */
  max-width: 450px;  /* Controla el ancho máximo */
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
  background-color: #fff6e8;
}

.card:hover {
  transform: scale(1.05);
  box-shadow: 0 8px 30px rgba(139, 69, 19, 0.5);
}

.card-img-top {
  border-bottom: 2px solid #8B4513;
  height: 250px; /* Altura de la imagen aumentada */
  object-fit: cover;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.card-title {
  font-size: 1.8rem; /* Tamaño de fuente ajustado */
  font-weight: bold;
  color: #8B4513;
  text-align: center;
  margin-top: 10px;
}

.card-body {
  padding: 20px; /* Espaciado interno aumentado */
  text-align: center;
}



  /* Ajuste del layout */
  .row {
    justify-content: center;
  }

  .col-md-4 {
    flex: 0 0 30%;
    max-width: 30%;
  }

  /* Botón de navegación del carrusel */
  .carousel-control-prev,
  .carousel-control-next {
    width: 5%;
  }

  /* Estilo de las imágenes una sobre otra */
  .stacked-images img {
    border-radius: 15px;
    box-shadow: 0 8px 30px #cac3b0;
    max-width: 100%;
    margin-bottom: 20px;
  }


  /* Estilo para la sección de estadísticas */
  
  .stats-section h2 {
    color:  #8B4513;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    color:  #8B4513;
  }

  .plus-sign {
    font-size: 2rem;
    margin-left: 8px;
    color: #8B4513;
  }

.imagen-personalizada {
    margin-left: 100px; /* Ajusta el margen izquierdo */
    width: 100%; 
    height: auto; 
    border-radius: 10px; 
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
}

  .advertisement {
    margin-top: 50px; /* Agregar margen superior */
}

.elemento-oculto {
        opacity: 0; /* Inicialmente oculto */
        transform: translateY(30px); /* Desplazado hacia abajo */
        transition: opacity 0.6s ease, transform 0.6s ease; /* Animación suave */
    }

    .elemento-visible {
        opacity: 1; /* Visible */
        transform: translateY(0); /* Posición original */
    }


