<script>
 

  // Inicializa el contador
  function animateCounter(id, endValue, duration) {
    let startValue = 0;
    const element = document.getElementById(id);
    const increment = Math.ceil(endValue / (duration / 10));
    const interval = setInterval(() => {
      startValue += increment;
      if (startValue >= endValue) {
        element.textContent = endValue;
        clearInterval(interval);
      } else {
        element.textContent = startValue;
      }
    }, 10);
  }

  // Inicia el contador cuando se hace scroll hacia la sección
  document.addEventListener("scroll", function() {
    const ventas = document.getElementById("counter-ventas");
    const clientes = document.getElementById("counter-clientes");
    const rectVentas = ventas.getBoundingClientRect();
    if (rectVentas.top < window.innerHeight && ventas.textContent == "0") {
      animateCounter("counter-ventas", 2500, 2000);
      animateCounter("counter-clientes", 1000, 2000);
    }
  });

        document.addEventListener("DOMContentLoaded", function() {
            const elementos = document.querySelectorAll('.elemento-oculto');

            function aparecerElementos() {
                elementos.forEach(function(elemento) {
                    const rect = elemento.getBoundingClientRect();
                    if (rect.top < window.innerHeight && rect.bottom >= 0) {
                        elemento.classList.add('elemento-visible'); // Añade la clase que activa la animación
                    }
                });
            }

            aparecerElementos(); // Llamamos a la función una vez al cargar la página
            window.addEventListener("scroll", aparecerElementos); // Escuchar el evento de scroll
        });

</script>
