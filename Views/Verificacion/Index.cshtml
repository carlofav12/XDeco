@model XDeco.Views.Verificacion.Index

@{
    ViewData["Title"] = "Verificación de Correo";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="GenerateAndVerifyCode">
    <div class="form-group">
        <label for="email">Correo Electrónico:</label>
        <input type="email" id="email" name="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="code">Código de Verificación:</label>
        <input type="text" id="code" name="code" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar Código / Verificar</button>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-info">@ViewData["Message"]</div>
}