@model XDeco.Models.Contacto

@{
    ViewData["Title"] = "Contacto";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show shadow mt-3" role="alert">
        <strong>Mensaje:</strong> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1>Contacto</h1>

  <div class="row">
        <!-- Datos de Contacto -->
        <div class="col-md-5">
            <div class="p-4 rounded shadow bg-light">
                <h2 class="text-dark fw-bold">Datos de Contacto</h2>
                <p class="text-muted">También puede contactarse con nosotros llamando a nuestra central telefónica o visitando nuestra empresa.</p>

                <!-- Teléfono -->
                <div class="d-flex align-items-center mb-3">
                    <img src="https://cdn-icons-png.freepik.com/512/8701/8701976.png" alt="Teléfono" class="me-3" style="width: 40px;" />
                    <div>
                        <h3 class="text-danger fw-bold mb-1">Central Telefónica</h3>
                        <p class="fs-5 fw-semibold">(01) 477 - 1546</p>
                    </div>
                </div>

                <!-- WhatsApp -->
                <div class="d-flex align-items-center mb-3">
                    <img src="https://cdn-icons-png.flaticon.com/512/1384/1384023.png" alt="WhatsApp" class="me-3" style="width: 40px;" />
                    <div>
                        <h3 class="text-success fw-bold mb-1">WhatsApp</h3>
                        <p class="fs-5 fw-semibold">+51 994 061 278</p>
                    </div>
                </div>

                <!-- Horario -->
                <h3 class="text-dark fw-bold">Horario de atención</h3>
                <p class="text-muted">Lunes a Viernes: 09:00 a 17:00 Hrs.</p>
            </div>
        </div>

        <!-- Formulario de Contacto -->
        <div class="col-md-7">
            <div class="p-4 rounded shadow bg-light">
                <form asp-controller="Contacto" asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Correo Electrónico</label>
                        <input asp-for="Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Titulo" class="form-label fw-bold">Asunto</label>
                        <input asp-for="Titulo" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Mensaje" class="form-label fw-bold">Mensaje</label>
                        <textarea asp-for="Mensaje" class="form-control" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label fw-bold">Dirección</label>
                        <input asp-for="Direccion" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-dark w-100 py-2">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input,
    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #000;
        margin-bottom: 15px;
        border-radius: 4px;
    }

    textarea {
        height: 100px;
    }

    .btn {
        padding: 10px 20px;
        background-color: #000;
        color: #fff;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

    .btn:hover {
        background-color: #333;
    }

    h2,
    h3 {
        margin-bottom: 5px;
    }
</style>
