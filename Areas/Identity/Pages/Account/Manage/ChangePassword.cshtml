@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="form-title">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="change-password-form" method="post" class="p-4 rounded shadow-sm bg-light custom-form">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Por favor, introduzca su contraseña anterior." />
                <label asp-for="Input.OldPassword" class="form-label">Contraseña Actual</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor, ingrese su nueva contraseña." />
                <label asp-for="Input.NewPassword" class="form-label">Nueva Contraseña</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Por favor, confirme su nueva contraseña."/>
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Nueva Contraseña</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <button type="submit" class="w-100 btn btn-lg btn-primary custom-btn">Actualizar Contraseña</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Título del formulario */
    .form-title {
        font-size: 28px;
        font-weight: bold;
        color: #343a40;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Estilos del formulario */
    .custom-form {
        background-color: #f8f9fa;
        border: 2px solid #cac3b0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Campos de entrada */
    .form-control {
        border: 1px solid #cac3b0;
        transition: box-shadow 0.3s ease, transform 0.3s ease;
    }

    .form-control:focus {
        box-shadow: 0 0 5px rgba(202, 195, 176, 0.8);
        border-color: #cac3b0;
    }

    /* Botón de envío */
    .custom-btn {
        background-color: #cac3b0;
        border: none;
        color: #fff;
        font-weight: bold;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .custom-btn:hover {
        background-color: #a39b8a;
        transform: translateY(-2px);
    }

    .custom-btn:focus {
        outline: none;
        box-shadow: 0 0 5px rgba(202, 195, 176, 0.8);
    }
</style>
