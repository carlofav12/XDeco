@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="container my-5">
    <!-- Título principal -->
    <h1 class="page-title display-4 text-center text-dark fw-bold mb-4" style="text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.2); transition: color 0.3s;">
        Administra tu Cuenta
    </h1>

    <!-- Subtítulo y divisor -->
    <div class="account-settings text-center">
        <h2 class="h4 text-secondary fw-semibold">Cambia la Configuración de tu Cuenta</h2>
        <hr class="divider mx-auto my-4" style="width: 60px; border-top: 3px solid #000000;">
    </div>
</div>

<style>
    /* Efecto dinámico en el título */
    .page-title:hover {
        color: #000000; /* Color en hover, de acuerdo a la paleta */
        transform: scale(1.05); /* Efecto de aumento */
    }
</style>


<style>
    /* Estilo adicional para los títulos */
    .page-title {
        font-weight: bold; /* Negrita para el título principal */
        color: #343a40; /* Color del texto */
    }

    .section-title {
        font-weight: bold; /* Negrita para el subtítulo */
        color: #495057; /* Color del subtítulo */
        text-transform: uppercase; /* Transformar a mayúsculas */
    }

    .divider {
        border: 1px solid #343a40; /* Color del divisor */
    }
</style>
    <div class="row">
        <div class="col-md-3">
            <div class="sidebar">
                <partial name="_ManageNav" />
            </div>
        </div>
        <div class="col-md-9">
            <div class="content-section card shadow-sm">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}

<style>
    /* Estilo para la página principal */
    .page-title {
        font-size: 28px;
        color: #343a40;
        margin-bottom: 20px;
        text-align: center;
        font-weight: bold;
    }

    .section-title {
        font-size: 28px;
        color: #343a40;
        margin-bottom: 20px;
        text-align: center;
        text-align: bold;
    }

    .divider {
        margin-bottom: 20px;
        border-top: 2px solid #a59f8f;
    }

    /* Barra lateral personalizada */
    .sidebar {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

    /* Sección de contenido con tarjeta */
    .content-section {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
        border: 1px solid #dee2e6;
    }

    .content-section .card-body {
        padding: 15px;
        font-size: 16px;
        color: #495057;
    }

   
</style>
