@page
@model ComprasModel
@{
    ViewData["Title"] = "Mis Compras";
    ViewData["ActivePage"] = ManageNavPages.Compras;
}

<h3 class="form-title">@ViewData["Title"]</h3>

<div class="container mt-5">
    @if (Model.Compras != null && Model.Compras.Any())
    {
        int index = 0;
        foreach (var compra in Model.Compras)
        {
            <div class="card mb-4 custom-card">
                <div class="card-header d-flex justify-content-between align-items-center custom-card-header">
                    <div>
                        <span><strong>N° @compra.Id</strong></span><br>
                        <span>Fecha de Compra: @DateTime.Now.ToString("dd/MM/yyyy")</span>
                    </div>
                    <button class="btn btn-link text-white" data-bs-toggle="collapse" data-bs-target="#collapse-@index" aria-expanded="false" aria-controls="collapse-@index">
                        <i class="fas fa-chevron-down"></i>
                    </button>
                </div>
                <div id="collapse-@index" class="collapse">
                    <div class="card-body">
                        <ul class="list-group mb-3">
                            @foreach (var producto in compra.Productos)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="@producto.ImagenUrl" alt="@producto.Nombre" class="product-image">
                                        <div>
                                            <strong>@producto.Nombre</strong><br>
                                            <small>Cantidad: @producto.Cantidad</small>
                                        </div>
                                    </div>
                                    <span class="text-muted">Total: S/. @(producto.Cantidad * producto.PrecioUnitario)</span>
                                </li>
                            }
                        </ul>
                        <div class="text-end">
                            <strong>Total Importe: S/. @compra.TotalAPagar</strong>
                        </div>
                    </div>
                </div>
            </div>
            index++;
        }
    }
    else
    {
        <div class="alert custom-alert text-center" role="alert">
            No tienes compras registradas.
        </div>
    }
</div>

<style>
    /* Estilos personalizados para la alerta */
    .custom-alert {
        background-color: #cac3b0;
        color: #ffffff;
        border: none;
    }
</style>

<style>
    /* Estilos del título */
    .form-title {
        font-size: 28px;
        font-weight: bold;
        color: #343a40;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Estilos de la tarjeta */
    .custom-card {
        border: 2px solid #cac3b0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .custom-card-header {
        background-color: #cac3b0;
        color: white;
        padding: 15px;
    }

    /* Imagen del producto */
    .product-image {
        width: 50px;
        height: 50px;
        object-fit: cover;
        margin-right: 10px;
        border-radius: 50%;
        border: 1px solid #cac3b0;
    }

    /* Estilo del botón */
    .btn-link {
        color: white;
        font-size: 1.25rem;
    }

    .btn-link:hover {
        text-decoration: none;
        color: #e0e0e0;
    }
</style>
